/* page/history/history.wxss */
page{
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .navbar{
    flex: none;
    display: flex;
    background: #fff;
    font-size: 30rpx;
    color: #bbbbbb;
  }
  .navbar .item{
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 90rpx;
  }
  .navbar .item.active{
    color: #908df5;
  }
  .navbar .item.active:after{
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 5rpx;
    background: #908df5;
  }
  .info{
    display:flex;
    margin-top: 250rpx;
    justify-content: center;
    align-items:center;
    flex-direction: column;
   }
   
   .info text {
     margin-top: 10rpx;
     font-size: 30rpx;
     color: #908df5;
   }
   .question{
     margin:20rpx 20rpx 20rpx 20rpx;
     }
   .user{
     display: flex;
     margin-bottom: 10rpx;
   }
   .info{
     margin-top:0rpx;
     margin-left: 15rpx;
     margin-right: 15rpx;
     font-size: 30rpx;
   }
   .user-photo{
   text-align: left;
     display:inline-block;
     vertical-align: top;
     width: 40rpx;
     height: 40rpx;
     border-radius: 50%;
   }
   .divLine{
     margin-right: 10rpx;
     margin-top:5rpx;
    background: #768cce;
    width: 100%;
   height:3rpx;
   }
   .content{
     margin-left:15rpx;
     width:450rpx;
     height:150rpx;
   }
   .fun{
     margin-top: 10rpx;
     margin-left: 10rpx;
     display: flex;
   }
   .detail{
     color: #8a8a8a;
     font-size: 35rpx;
     margin-left: 5rpx;
     margin-right: 40rpx;
   }
   .icon{
     width:40rpx;
     height:40rpx;
   
   }
   .picture{
     width:200rpx;
     margin-left:20rpx;
     height:150rpx;
   }
   .content-all{
     display:flex;
   }
   .content-part{
     width:900rpx;
     margin-left:15rpx;
     display: -webkit-box;  /*设置为弹性盒子*/
     -webkit-line-clamp: 5;  /*最多显示5行*/
     overflow: hidden;  /*超出隐藏*/
     text-overflow: ellipsis;  /*超出显示为省略号*/
     -webkit-box-orient: vertical;
     word-break: break-all;  /*强制英文单词自动换行*/
   }
   .user{
     height:100rpx;
   
   }
   .fun{
     height:100rpx;
   }