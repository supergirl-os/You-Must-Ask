._button{
	margin-right:0 auto;
	padding:0vmax;
	width:50px;
	position: fixed;
  right:10rpx;
  bottom:10rpx;
  height:87rpx;
  border-radius: 30rpx; 
  background-color: #a0acdc;
}

.user{
  width:40rpx;
  height:40rpx;
}

._button:after{
 content: "";
 background:#FFA07A;
 width: 750rpx;
 height: 750rpx;
 left: calc(50% - 375rpx);
 top: calc(50% - 375rpx);
 opacity: 0;
 margin: auto;
 transform: scale(1);
 transition: all 0.4s ease-in-out;
}
._button:active:after {
 transform: scale(0);
 opacity: 1;
 transition: 0s;
}


